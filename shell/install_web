#! /bin/bash

DIR_PATH="/home/core"
DIR_DATA="$DIR_PATH/data/"
DIR_DOCKER="$DIR_PATH/docker/"

sudo mkdir -p $DIR_DATA

sudo systemctl start etcd
sudo systemctl start fleet

for SERVICE_NAME in redis mysql php nginx
do
    sudo cp -rfp ${DIR_DOCKER}${SERVICE_NAME}/conf ${DIR_DATA}${SERVICE_NAME}/
    fleetctl destroy ${DIR_DOCKER}service/${SERVICE_NAME}
    fleetctl submit ${DIR_DOCKER}service/${SERVICE_NAME}
done

sudo chown -R root:root $DIR_DATA
